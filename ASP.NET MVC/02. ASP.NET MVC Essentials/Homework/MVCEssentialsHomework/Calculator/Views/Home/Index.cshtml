@model Calculator.Models.RequestDataModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-8">
        <h1>
            <img src="http://sf.gwebtools.com/images/icons/binaryIcon.png">
            Bit Calculator
        </h1>
        @using (Html.BeginForm("PostData", "Home", FormMethod.Post, new { @class = "form-inline text-left" }))
        {
            <div class="control-group">
                <label class="control-label" for="qt">Quantity</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Quantity, new { type = "number", @class = "form-control" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="type">Type</label>
                <div class="controls">
                    @Html.EnumDropDownListFor(m => m.Type, new { @class = "form-control" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="kilo">Kilo</label>
                <div class="controls">
                    <select name="kilo" class="form-control">
                        <option value="1024" selected="selected">1024</option>
                        <option value="1000">1000</option>
                    </select>
                </div>
            </div>

            <div class="control-group">
                <input class="btn btn-primary btn-sm" type="submit" value="GO">
            </div>
        }

        <div id="resPost" style="margin-top:15px">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <td colspan="2">
                            Bandwidth (Kilo = @ViewBag.Kilo bits)
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Result != null)
                    {
                        foreach (var item in ViewBag.Result)
                        {
                            <tr>
                                <td width="120">@item.Key</td>
                                <td width="150">@item.Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
