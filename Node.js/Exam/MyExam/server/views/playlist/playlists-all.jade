extends ../shared/layout
block main-content
    .container
        .row
            .col-md-6.col-md-offset-3
                h1.text-center Playlists
                br
                table.table-bordered.table
                    tr
                        th Title
                        th Description
                        th Created on
                        th Number of videos
                        th Number of comments
                    each playlist in data.playlists
                        tr
                            td #{playlist.title}
                            td #{playlist.creator}
                            td #{playlist.creationDate}
                            td #{playlist.videoURLs.length}
                            td #{playlist.comments.length}
                                td
                                    a.btn.btn-lg.btn-primary(href="/playlist/details/#{playlist._id}") View
                br
                ul.list-unstyled.list-inline.text-center
                    - for(var i = 1; i <= data.total / data.pageSize + 1; i++)
                        li
                            a.btn.btn-lf.btn-primary(href="/playlist?page=#{i}&pageSize=#{data.pageSize}") #{i}