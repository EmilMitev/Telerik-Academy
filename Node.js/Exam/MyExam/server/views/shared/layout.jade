doctype
html
    head
        title Copy YouTube
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav
        .container
            .navbar-header
                a.navbar-brand(href="/") YouTube playLists
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/") Home
                    if (currentUser)
                        li
                            a(href="/playlist/create") Create playlist
                        li
                            a(href="/playlist") Playlists
                        li
                            a(href="/profile") #{currentUser.username}
                        li
                            a(href="/logout") Logout
                    if (!currentUser)
                        li
                            a(href="/playlist") Playlists
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}
            if (successMessage)
                .alert.alert-success #{successMessage}

            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2016

        include scripts